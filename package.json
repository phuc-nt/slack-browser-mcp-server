{
  "name": "slack-browser-mcp-server",
  "version": "1.2.0",
  "description": "Enterprise MCP server: 12 production tools with Block Kit + 50+ search patterns - AI-optimized for information synthesis",
  "main": "dist/index.js",
  "bin": {
    "slack-browser-mcp-server": "dist/index.js"
  },
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "build": "tsc",
    "start": "node dist/index.js",
    "dev": "ts-node src/index.ts",
    "clean": "rm -rf dist",
    "lint": "eslint src/**/*.ts",
    "format": "prettier --write src/**/*.ts",
    "test": "cd test-client && npm test",
    "debug": "ts-node --inspect src/index.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "prepublishOnly": "npm run clean && npm run build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phuc-nt/slack-browser-mcp-server.git"
  },
  "keywords": [
    "slack",
    "mcp",
    "claude",
    "ai",
    "server",
    "model-context-protocol",
    "browser-token",
    "stealth-auth",
    "block-kit",
    "search-patterns",
    "information-synthesis",
    "enterprise"
  ],
  "author": "phuc-nt",
  "license": "MIT",
  "type": "module",
  "bugs": {
    "url": "https://github.com/phuc-nt/slack-browser-mcp-server/issues"
  },
  "homepage": "https://github.com/phuc-nt/slack-browser-mcp-server#readme",
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.1",
    "dotenv": "^17.2.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/node": "^24.2.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
